{
  "name": "express-ts-node-sqlite-services",
  "version": "1.0.0",
  "description": "Boilerplate application with TypeScript and Express framework, fit for building RESTful APIs with SQLite",
  "main": "dist/Index.js",
  "scripts": {
    "dev": "nodemon --watch src --exec ts-node -r tsconfig-paths/register src/Index.ts",
    "build": "tsc && tsc-alias",
    "start": "node dist/Index.js",
    "pm2:start": "npm run build && pm2 start ecosystem.config.js --env production",
    "pm2:start:dev": "pm2 start ecosystem.config.js --env development",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:reload": "pm2 reload ecosystem.config.js",
    "pm2:delete": "pm2 delete ecosystem.config.js",
    "pm2:logs": "pm2 logs",
    "pm2:monit": "pm2 monit",
    "pm2:list": "pm2 list",
    "pm2:save": "pm2 save",
    "pm2:resurrect": "pm2 resurrect",
    "test": "node --loader ts-node/esm ./node_modules/mocha/bin/mocha -r tsconfig-paths/register \"test/**/*.test.ts\"",
    "test:watch": "mocha --watch",
    "lint": "eslint src/**/*.ts test/**/*.ts --max-warnings=50",
    "lint:fix": "eslint src/**/*.ts test/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"test/**/*.ts\""
  },
  "keywords": [
    "express",
    "typescript",
    "nodejs",
    "sequelize",
    "sqlite",
    "sqlite3",
    "api",
    "rest"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "sequelize": "^6.37.7",
    "sqlite3": "^5.1.7",
    "tsc-alias": "^1.8.16"
  },
  "devDependencies": {
    "@types/chai": "^5.2.3",
    "@types/express": "^5.0.6",
    "@types/mocha": "^10.0.10",
    "@types/node": "^25.0.3",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "chai": "^6.2.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "mocha": "^11.7.5",
    "nodemon": "^3.1.11",
    "pm2": "^5.4.2",
    "prettier": "^3.7.4",
    "ts-mocha": "^11.1.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3"
  }
}
